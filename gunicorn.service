[Unit]
Description=demo fastapi application
After=network.target

[Service]
User=marius
Group=marius
WorkingDirectory=/home/marius/app/src/
Environment="PATH=/home/marius/app/venv/bin"
ExecStart=/home/marius/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target